<Window x:Class="Freight_transportation_system.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freight_transportation_system"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="MyDividerBrush" Color="#273469"/>
    </Window.Resources>

    <Border Background="#caf0f8" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!--Menu logo-->

            <Border
                    Background="#c9184a" 
                    CornerRadius="0,80,80,0"
                    Height="600"
                    Margin="0,40,0,40">

                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,40,0,0">


                        <Image Grid.Row="0"
                                Source="ImagesIcon/sedan2.png"
                                Width="150"
                                Height="150"
             
                                Margin="0,0,0,50"/>


                        <!--Text-->

                        <TextBlock Text="FREIGHT"
                                   Grid.Row="1"
                                   Foreground="#FAFAFF"
                                   FontSize="30"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI"/>

                        <TextBlock Text="TRANSPORTATION"
                                   Grid.Row="1"
                                   Foreground="#FAFAFF"
                                   FontSize="30"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI"/>

                        <TextBlock Text="MANAGEMENT"
                                   Grid.Row="1"
                                   Foreground="#FAFAFF"
                                   FontSize="30"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   FontFamily="Segoe UI"/>

                    </StackPanel>


                    <!-- Зображення по центру знизу -->

                    <Image Grid.Row="2"
                                   Source="ImagesIcon/sedan.png"
                                   Width="150"
                                   Height="150"
             
                                   Margin="0,0,0,20"/>

                </Grid>

            </Border>

            <Grid Grid.Column="1" Margin="30,100,30,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Замовлення"
               FontSize="40"
               FontWeight="SemiBold"
               Foreground="#30343F"
               Margin="0 0 0 10"
               Grid.Row="0"
                />

                <!-- Кнопка Material Design -->
                <Button x:Name="AddOrder" Grid.Row="0"
            Content="ДОДАТИ НОВЕ ЗАМОВЛЕННЯ"
            Background="#FF758F"
            Style="{StaticResource MaterialDesignOutlinedButton}"
            Margin="0,10,0,10"
            Padding="30,5"
            HorizontalAlignment="Right"
            FontSize="15"
            FontWeight="Bold"
            MinWidth="150"
            Click="AddOrder_Click" />

                <!-- Сепаратор -->
                <Separator Grid.Row="1"
                   Background="{DynamicResource MyDividerBrush}" 
                   Margin="0 10" />

                <!-- Кнопка "Archived" -->
                <StackPanel Grid.Row="2"
                            Background="#FF8FA3"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="0,10,0,0">

                    <Button x:Name="Archived" Content="Заархівовано"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="20,5"
                            FontSize="15"
                            FontWeight="Bold"
                            Click="Archived_Click_1" />



                </StackPanel>

                <!-- Таблиця -->
                <DataGrid x:Name="dataGridView1"
                          Grid.Row="3"
                          AutoGenerateColumns="False"
                         
                          Margin="0,10,0,90"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          RowHeaderWidth="0"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          ItemsSource="{Binding Orders}"
                          FontSize="14"
                          FontFamily="Segoe UI"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#264653"
                          VerticalGridLinesBrush="#264653"
                          ColumnHeaderHeight="40"
                          RowHeight="35"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          Background="#93e1d8" SelectionChanged="dataGridView1_SelectionChanged">

                    <!--Ось це прив'язка нашої таблиці-->


                    <DataGrid.Resources>
                        <!-- СТИЛЬ ЗАГОЛОВКІВ КОЛОНОК -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#264653"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8"/>
                        </Style>

                        <!-- ПІДСВІЧЕННЯ ОБРАНОГО РЯДКА -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF758F"/>
                                    <!-- світло-блакитний -->
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>


                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected}" Width="Auto"/>
                        <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="Auto"/>
                        <DataGridTextColumn Header="Транспорт" Binding="{Binding Transport}" Width="120"/>
                        <DataGridTextColumn Header="Відправлення" Binding="{Binding Departure}" Width="150"/>
                        <DataGridTextColumn Header="Прибуття" Binding="{Binding Arrival}" Width="150"/>
                        <DataGridTextColumn Header="Сума" Binding="{Binding Sum}" Width="100"/>
                    </DataGrid.Columns>


                </DataGrid>

                <Button  Grid.Row="4"
                         x:Name="DetailsButton"
                         Content="Деталі"
                         Margin="0,0,20,40"
                         Width="150"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Bottom" 
                         Style="{StaticResource MaterialDesignOutlinedButton}"
                         Background="#FF8FA3"
                         FontSize="15"
                         FontWeight="Bold"
                        Click="DetailsButton_Click"
                         IsEnabled="False"
                         />
                <Button Grid.Row="4"
                        x:Name="DeleteButton"
                        Content ="Видалити"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="180,0,20,40"
                        Width="150"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Background="#FF8FA3"
                        FontSize="15"
                        FontWeight="Bold"
                        IsEnabled="False"
                        Click="DeleteButton_Click"/>


            </Grid>
        </Grid>

    </Border>
</Window>
